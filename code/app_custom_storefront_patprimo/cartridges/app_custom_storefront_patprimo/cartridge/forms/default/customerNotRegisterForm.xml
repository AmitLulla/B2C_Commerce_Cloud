<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
	<!-- <group formid="customerNotRegisterForm"> -->
        <field 
			formid="firstName" 
			label="label.input.firstname.profile" 
			mandatory="true" 
			max-length="50"
			missing-error="error.message.required" 
			range-error="error.message.50orless" 
			type="string" />

         <field 
			formid="lastName" 
			label="label.input.firstname.profile" 
			mandatory="true" 
			max-length="50"
			missing-error="error.message.required" 
			range-error="error.message.50orless" 
			type="string" />
        
        <field 
			formid="razonSocial" 
			label="label.input.firstname.profile" 
			mandatory="false" 
			max-length="50"
			missing-error="error.message.required" 
			range-error="error.message.50orless" 
			type="string" />

		<field 
			formid="responsableIVA" 
			label="description.checkbox.emailsignup.profile" 
			type="boolean"/>

        <field 
			formid="nameCompany" 
			label="label.input.firstname.profile" 
			mandatory="false" 
			max-length="50"
			missing-error="error.message.required" 
			range-error="error.message.50orless" 
			type="string" />

         <field 
			formid="nit" 
			label="label.input.firstname.profile" 
			mandatory="false" 
			max-length="50"
			missing-error="error.message.required" 
			range-error="error.message.50orless" 
			type="string" />

		<field 
			formid="confirmNit" 
			label="label.input.firstname.profile" 
			mandatory="false" 
			max-length="50"
			missing-error="error.message.required" 
			range-error="error.message.50orless" 
			type="string" />

        <field 
			formid="cedula" 
			label="label.input.firstname.profile" 
			mandatory="true" 
			max-length="50"
			missing-error="error.message.required" 
			range-error="error.message.50orless" 
			type="string" />

        <field
			formid="email" 
			label="label.input.email.profile" 
			mandatory="true" 
			max-length="50" 
			missing-error="error.message.required"
			parse-error="error.message.parse.email.profile.form"
			range-error="error.message.50orless"
			regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$" 
			value-error="ValueErrorText"
			type="string"/>
        <field 
			formid="phoneMobile"
			label="label.input.phone.profile"
			mandatory="true"
			regexp="^[\(]?[\+]?(\d{2}|\d{3})[\)]?[\s]?((\d{6}|\d{7})|(\d{3}[\*\.\-\s]){2}\d{3}|(\d{2}[\*\.\-\s]){3}\d{2}|(\d{4}[\*\.\-\s]){1}\d{4})|\d{7}|\d{10}|\d{12}$"
			missing-error="error.message.required"
			parse-error="error.message.parse.phone.profile.form"
			type="string"/> 
    <!-- </group> -->
    
</form>