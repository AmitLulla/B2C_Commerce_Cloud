<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
		<field 
			formid="email" 
			label="label.input.firstname.profile" 
			mandatory="true" 
			regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"
			max-length="50"
			error ="error.message.parse.email.profile.form" 
			required=""
			missing-error="error.message.parse.email.profile.form" 
			range-error="error.message.parse.email.profile.form" 
			parse-error="error.message.parse.email.profile.form"
			type="string" />

		<field 
			formid="agree" 
			type="boolean" 
			checked="false" 
			default-value="false" 
			mandatory="false" />
</form>